<div>
  <section>
    <% if @user.last_posts.blank? %>
      <h2>There are no posts. Please add a post.</h2>
      <%else%>
      <div class='final-post'>
       <h3>Post <%= @Post.id%> by <%= @post.author.name%></h3>
       <p class='counter'>Comments: <%= @post.comments_counter%>, Likes: <%= @post.likes_counter%></p>
       <p><%= @post.text%></p>
       
      <div>
  </section>
</div>